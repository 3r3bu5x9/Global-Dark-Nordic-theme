;---------------------------------------
;	   VOLUME MODULE
;---------------------------------------

[module/pulseaudio]
type = internal/pulseaudio

; Sink to be used, if it exists (find using `pacmd list-sinks`, name field)
; If not, uses default sink
sink = alsa_output.pci-0000_00_1b.0.analog-stereo

; Use PA_VOLUME_UI_MAX (~153%) if true, or PA_VOLUME_NORM (100%) if false
; Default: true
use-ui-max = true

; Interval for volume increase/decrease (in percent points)
; Default: 5
interval = 5
format-volume = <ramp-volume><label-volume>
format-volume-foreground = ${colors.nord4}
format-volume-background = ${colors.nord1}

label-volume = "%percentage% "
label-volume-foreground = ${colors.nord4}
label-volume-background = ${colors.nord1}
label-muted = " Ôá∂ mute "
label-muted-foreground = ${colors.nord4}
label-muted-background = ${colors.nord1}

ramp-volume-0 = " ÔÄ¶ "
ramp-volume-0-foreground = ${colors.nord4}
ramp-volume-0-background = ${colors.nord1}
ramp-volume-1 = " ÔÄß "
ramp-volume-1-foreground = ${colors.nord4}
ramp-volume-1-background = ${colors.nord1}
ramp-volume-2 = " ÔÄ® "
ramp-volume-2-foreground = ${colors.nord4}
ramp-volume-2-background = ${colors.nord1}
ramp-volume-3 = " ÔÄ® "
ramp-volume-3-foreground = ${colors.nord4}
ramp-volume-3-background = ${colors.nord1}

